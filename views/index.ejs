<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
	<base href="/">
	<meta charset="utf-8">
    <title>Bookmon</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" href="index.css"> <!-- load styles -->
</head>
<body>
<%- include ../node_modules/really-basic-login-bar/views/partials/header.ejs %>
<div class="container">
    <% if (!user) { %>

		<div id="intro" class="vert-centered" style="text-align:center;">
			<i class="fa fa-book" style="font-size:5rem;"></i>
			<h1>Bookmon</h1>
			<p>								<a href="/login" class="btn btn-default">Login</a> or 
								<a href="/signup" class="btn btn-default">Signup</a> to play!</p>
		</div>
	
    <% } else {%>
	
	<div data-ng-app="bookmonGame" data-ng-controller="autoLogger" data-ng-init="package = <%= packagedUser %>;init(package)">
	

    <div ng-view></div>


  <!-- scripts -->
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular.min.js"></script> <!-- load angular -->
  <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-route.min.js"></script> <!-- load angular routing -->
  <script src="https://cdn.rawgit.com/alertifyjs/alertify.js/v1.0.5/dist/js/ngAlertify.js"></script><!--CREDIT Brad Berger & CONTRIBUTORS-->
  <script src="router.js"></script>
  <script src="services.js"></script>
  <script src="controllers.js"></script>


	</div>
	
	
	
	<% } %>
</div>
</body>
</html>
